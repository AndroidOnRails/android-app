<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.hana053.micropost.presentation.relateduserlist.RelatedUserItemViewModel" />

        <variable
            name="followBtnModel"
            type="com.hana053.micropost.presentation.core.components.followbtn.FollowBtnViewModel" />

        <variable
            name="followBtnListener"
            type="com.hana053.micropost.presentation.core.components.followbtn.FollowBtnViewListener" />

        <variable
            name="avatarModel"
            type="com.hana053.micropost.presentation.core.components.avatar.AvatarViewModel" />

        <variable
            name="avatarListener"
            type="com.hana053.micropost.presentation.core.components.avatar.AvatarViewListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_bottom"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_small"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/margin_small">

        <ImageView
            android:layout_width="@dimen/avatar_size_medium"
            android:layout_height="@dimen/avatar_size_medium"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:onClick="@{avatarListener.onClick}"
            android:src="@android:drawable/sym_def_app_icon"
            app:imageUrl="@{avatarModel.getUrl(72)}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{model.user.name}"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:enabled="@{followBtnModel.isEnabled}"
                android:onClick="@{followBtnListener.onClick}"
                android:text='@{followBtnModel.isFollowedByMe ? "Unfollow" : "Follow"}'
                android:visibility="@{model.user.isMyself ? View.GONE : View.VISIBLE}" />
        </RelativeLayout>
    </LinearLayout>
</layout>
