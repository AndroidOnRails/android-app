<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item
                android:bottom="12dp"
                android:left="-1dp"
                android:right="-1dp"
                android:top="-1dp">
                <shape>
                    <stroke android:width="1dp"
                        android:color="?colorAccent" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:bottom="12dp"
                android:left="-1dp"
                android:right="-1dp"
                android:top="-1dp">
                <shape>
                    <stroke android:width="1dp"
                        android:color="@android:color/darker_gray" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
