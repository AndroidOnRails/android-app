<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hana053.micropost">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.hana053.micropost.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".pages.main.MainActivity"
            android:label="@string/home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".pages.top.TopActivity"
            android:theme="@style/AppTheme.Top"/>
        <activity android:name=".pages.login.LoginActivity"/>
        <activity android:name=".pages.signup.SignupActivity"/>
        <activity android:name=".pages.usershow.UserShowActivity"/>
        <activity android:name=".pages.micropostnew.MicropostNewActivity"/>
        <activity android:name=".pages.relateduserlist.RelatedUserListActivity"/>
    </application>

</manifest>
